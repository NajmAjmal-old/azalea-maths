{
    "name": "CutestBypass",
    "version": "2.1.4",
    "description": "The cutest SparxMaths bookwork-bypass extension for Chromium ~!",
    "manifest_version": 3,
    "author": "Rosie",

    "host_permissions": [
        "*://www.sparxmaths.uk/*",
        "https://auth.sparxmaths.uk/*"
    ],

    "icons": {
        "128": "assets/logo.png"
    },

    "action": {
        "default_icon": {
            "128": "assets/logo.png"
        },
        "default_title": "CutestBypass"
    },

    "permissions": [
        "activeTab",
        "storage",
        "downloads"
    ],

    "content_scripts": [{
        "js": ["index.js"],
        "css": ["rosiepink.css"],
        "matches": ["https://*.sparxmaths.uk/*"],
        "run_at": "document_start"
    }],

    "web_accessible_resources": [{
        "resources": ["bundle.js"],
        "matches": ["<all_urls>"]
    }]
}